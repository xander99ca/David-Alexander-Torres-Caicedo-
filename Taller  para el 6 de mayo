#include <iostream>
using namespace std;

struct peli{    

string nombre;
int ano_reali;
string genero;
float dinero_recau;
peli *izq, *der;
    
};
  
peli *raiz, *aux, *aux2;


int posicionar(){
    if(aux->nombre < aux2->nombre){
        if(aux2->izq!=NULL){
            aux2= aux2->izq;
            posicionar();
        }
        else 
        aux2->izq=aux;
    }
    else if(aux->ano_reali > aux2->ano_reali){
        if(aux2->der!=NULL){
            aux2= aux2->der;
            posicionar();
        }
        else 
        aux2->der=aux;
    }
    return 0;
}

int preorden(peli *aux3){
    cout<<aux3->ano_reali<<endl;
    if(aux3->izq!=NULL){
        preorden(aux3->izq);
    }
     if(aux3->der!=NULL){
        preorden(aux3->der);
    }
    return 0;
}

int inorden(peli *aux3){
    if(aux3->izq!=NULL){
        inorden(aux3->izq);
    }
    cout<<aux3->ano_reali<<endl;
    if(aux3->der!=NULL){
        inorden(aux3->der);
    }
    return 0;

}

int postorden(peli *aux3){
    if(aux3->izq!=NULL){
        postorden(aux3->izq);
    }
    if(aux3->der!=NULL){
        postorden(aux3->der);
    }
    cout<<aux3->ano_reali<<endl;
    return 0;

}


